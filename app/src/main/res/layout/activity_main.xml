<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/start_started_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_started_service">
    </Button>
    <TextView
        android:id="@+id/started_service_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Started Service has not been launched">
    </TextView>
    <ImageView
        android:id="@+id/started_service_image"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <Button
        android:id="@+id/start_bound_service_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_bound_service">
    </Button>
    <TextView
        android:id="@+id/bound_service_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bound Service has not been launched">
    </TextView>
    <ImageView
        android:id="@+id/bound_service_image"
        android:layout_width="match_parent"
        android:layout_height="140dp" />

    <Button
        android:id="@+id/start_job_scheduler_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/start_job_scheduler">
    </Button>

</LinearLayout>